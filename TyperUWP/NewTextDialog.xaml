<ContentDialog
	x:Class="TyperUWP.NewTextDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TyperUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add new text"
    PrimaryButtonText="Save"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
	CloseButtonText="Cancel"
	Closing="ContentDialog_Closing"
	>
	
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="4*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<FlyoutBase.AttachedFlyout>
			<Flyout x:Name="errorFlyout">
				<TextBlock x:Name="errorText" TextWrapping="Wrap" Text="Title Error"/>
			</Flyout>
		</FlyoutBase.AttachedFlyout>
		<TextBlock Text="Title" Grid.Column="0" Grid.Row="0"/>
		<TextBlock Text="Text" Grid.Column="0" Grid.Row="1"/>
		<TextBox x:Name="titleTb" Grid.Column="1" Grid.Row="0" />
		<TextBox x:Name="textTb" Grid.Column="1" Grid.Row="1"/>
	</Grid>
</ContentDialog>
