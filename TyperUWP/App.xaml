<Application
    x:Class="TyperUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TyperUWP"
	RequestedTheme="Dark"
	xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
	>
	<Application.Resources>
		<x:Double x:Key="ContentDialogMaxWidth">1000</x:Double>
		<x:Double x:Key="ContentDialogMaxHeight">700</x:Double>
		<Color x:Key="PrimaryColor">#ff112266</Color>
		<LinearGradientBrush x:Key="panelBorderGradient" StartPoint="0.5,0" EndPoint="0.5,1">
			<GradientStop Color="#051050" Offset="0.0" />
			<GradientStop Color="DarkBlue" Offset="1.0" />
		</LinearGradientBrush>
		<LinearGradientBrush x:Key="panelBorderRevGradient" StartPoint="0.5,0" EndPoint="0.5,1">
			<GradientStop Color="DarkBlue" Offset="0.0" />
			<GradientStop Color="#051050" Offset="1.0" />
		</LinearGradientBrush>
		<LinearGradientBrush x:Key="panelBorderGradientHighContrast" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#051030" Offset="0.0" />
			<GradientStop Color="#406080" Offset="1.0" />
		</LinearGradientBrush>
	</Application.Resources>
	
</Application>
