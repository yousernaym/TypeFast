<UserControl
    x:Class="TyperUWP.TextBlockEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TyperUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
		<Border x:Name="border">
			<TextBlock x:Name="textBlock" Text=""/>
		</Border>
		<!--Rectangle is rendered on top of text for compatibility with high-contrast themes-->
		<Rectangle x:Name="highContrastMarker"/>
	</Grid>
</UserControl>
